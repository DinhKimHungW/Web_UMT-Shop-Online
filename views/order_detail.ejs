<%- include('partials/header') %>

<div class="container mt-5">
    <div class="glass-card p-4 animate__animated animate__fadeIn">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 style="color: var(--text-primary);">Order #<%= order.id %></h2>
            <span class="badge bg-<%= order.status === 'completed' ? 'success' : (order.status === 'pending' ? 'warning' : 'secondary') %> fs-6">
                <%= order.status.toUpperCase() %>
            </span>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="glass-card p-3 h-100">
                    <h5 style="color: var(--text-primary);">Shipping Information</h5>
                    <p style="color: var(--text-secondary);">
                        <strong>Address:</strong> <%= order.address %><br>
                        <strong>Date:</strong> <%= new Date(order.created_at).toLocaleString() %>
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="glass-card p-3 h-100">
                    <h5 style="color: var(--text-primary);">Payment Details</h5>
                    <p style="color: var(--text-secondary);">
                        <strong>Method:</strong> <%= order.payment_method %><br>
                        <strong>Total Amount:</strong> $<%= order.total_amount.toFixed(2) %>
                    </p>
                </div>
            </div>
        </div>

        <h4 class="mb-3" style="color: var(--text-primary);">Order Items</h4>
        <div class="table-responsive">
            <table class="table table-borderless" style="color: var(--text-secondary);">
                <thead style="border-bottom: 1px solid rgba(255,255,255,0.1);">
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th class="text-end">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.order_items.forEach(item => { %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <% if (item.products.image_url) { %>
                                        <img src="<%= item.products.image_url %>" alt="<%= item.products.name %>" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px; margin-right: 10px;">
                                    <% } %>
                                    <span><%= item.products.name %></span>
                                </div>
                            </td>
                            <td>$<%= item.price.toFixed(2) %></td>
                            <td><%= item.qty %></td>
                            <td class="text-end">$<%= (item.price * item.qty).toFixed(2) %></td>
                        </tr>
                    <% }); %>
                </tbody>
                <tfoot style="border-top: 1px solid rgba(255,255,255,0.1);">
                    <tr>
                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                        <td class="text-end"><strong>$<%= order.total_amount.toFixed(2) %></strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a href="/orders" class="btn btn-secondary glass-btn">Back to Orders</a>
            <% if (order.status === 'pending') { %>
                <button id="cancelOrderBtn" class="btn btn-danger glass-btn" data-id="<%= order.id %>">Cancel Order</button>
            <% } %>
        </div>
    </div>
</div>

<script>
    const cancelBtn = document.getElementById('cancelOrderBtn');
    if (cancelBtn) {
        cancelBtn.addEventListener('click', function() {
            const orderId = this.dataset.id;
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, cancel it!',
                background: 'rgba(255, 255, 255, 0.1)',
                color: '#fff'
            }).then(async (result) => {
                if (result.isConfirmed) {
                    try {
                        const res = await fetch(`/orders/${orderId}/cancel`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' }
                        });
                        
                        if (res.ok) {
                            Swal.fire({
                                title: 'Cancelled!',
                                text: 'Your order has been cancelled.',
                                icon: 'success',
                                background: 'rgba(255, 255, 255, 0.1)',
                                color: '#fff'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            const data = await res.json();
                            Swal.fire({
                                title: 'Error!',
                                text: data.error || 'Failed to cancel order.',
                                icon: 'error',
                                background: 'rgba(255, 255, 255, 0.1)',
                                color: '#fff'
                            });
                        }
                    } catch (err) {
                        console.error(err);
                        Swal.fire({
                            title: 'Error!',
                            text: 'An unexpected error occurred.',
                            icon: 'error',
                            background: 'rgba(255, 255, 255, 0.1)',
                            color: '#fff'
                        });
                    }
                }
            });
        });
    }
</script>

<%- include('partials/footer') %>
