<%- include('partials/header') %>

<div class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 hero-title">Welcome to UMT Store & Service</h1>
        <p class="lead mb-4 opacity-75">Discover premium products and delicious food services right on campus.</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="/products" class="btn btn-light text-primary fw-bold px-4 py-2 rounded-pill shadow-sm">Shop Now</a>
            <a href="/products?category=food" class="btn btn-outline-light fw-bold px-4 py-2 rounded-pill">Order Food</a>
        </div>
    </div>
</div>

<div class="container mb-5">
    <% if (locals.error) { %>
        <div class="alert alert-danger shadow-sm border-0" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
        </div>
    <% } %>

    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <a href="/products?category=sale" class="category-card">
                <div class="card h-100 text-center border-0 shadow-sm hover-shadow">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <div class="category-icon mb-3">
                            <i class="fas fa-tags"></i>
                        </div>
                        <h3 class="h4 fw-bold text-primary">On Sale</h3>
                        <p class="text-muted mb-0">Grab the best deals today!</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6">
            <a href="/products?category=hot" class="category-card">
                <div class="card h-100 text-center border-0 shadow-sm hover-shadow">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <div class="category-icon mb-3">
                            <i class="fas fa-fire"></i>
                        </div>
                        <h3 class="h4 fw-bold text-primary">Hot Products</h3>
                        <p class="text-muted mb-0">Trending items everyone loves.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6">
            <a href="/products?category=food" class="category-card">
                <div class="card h-100 text-center border-0 shadow-sm hover-shadow">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <div class="category-icon mb-3">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <h3 class="h4 fw-bold text-primary">Food Service</h3>
                        <p class="text-muted mb-0">Delicious meals ready for you.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6">
            <a href="/products?category=drink" class="category-card">
                <div class="card h-100 text-center border-0 shadow-sm hover-shadow">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <div class="category-icon mb-3">
                            <i class="fas fa-coffee"></i>
                        </div>
                        <h3 class="h4 fw-bold text-primary">Drinks</h3>
                        <p class="text-muted mb-0">Refresh yourself with our beverages.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="fw-bold text-dark m-0">Featured Products</h2>
        <a href="/products" class="btn btn-outline-primary rounded-pill px-4">View All</a>
    </div>
    
    <div class="row g-4">
        <% products.forEach(product => { %>
            <div class="col-md-3 col-sm-6">
                <div class="card h-100 product-card border-0 shadow-sm">
                    <div class="position-relative overflow-hidden">
                        <img src="<%= product.product_images && product.product_images[0] ? product.product_images[0].url : 'https://via.placeholder.com/300' %>" class="card-img-top" alt="<%= product.name %>">
                        <% if (product.stock <= 0) { %>
                            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark bg-opacity-50 text-white fw-bold">
                                Out of Stock
                            </div>
                        <% } %>
                    </div>
                    <div class="card-body d-flex flex-column p-3">
                        <h5 class="card-title h6 fw-bold mb-2 text-truncate" title="<%= product.name %>"><%= product.name %></h5>
                        <div class="mt-auto">
                            <p class="card-text text-primary fw-bold fs-5 mb-3"><%= product.price.toLocaleString() %> VND</p>
                            <div class="d-flex gap-2">
                                <a href="/products/<%= product.slug %>" class="btn btn-outline-secondary btn-sm flex-grow-1 rounded-pill">Details</a>
                                <button class="btn btn-primary btn-sm rounded-circle add-to-cart" data-id="<%= product.id %>" style="width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('partials/footer') %>
