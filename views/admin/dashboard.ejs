<%- include('../partials/header') %>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 fw-bold text-primary">Admin Dashboard</h1>
        <span class="badge bg-primary rounded-pill px-3 py-2"><%= user.roles.name.replace('_', ' ').toUpperCase() %></span>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3">
                        <i class="fas fa-box fa-2x"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Total Products</h6>
                        <h3 class="fw-bold mb-0"><%= stats.productCount %></h3>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a href="/admin/products" class="text-decoration-none fw-bold small">Manage Products <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 text-success rounded-circle p-3 me-3">
                        <i class="fas fa-shopping-cart fa-2x"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Total Orders</h6>
                        <h3 class="fw-bold mb-0"><%= stats.orderCount %></h3>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a href="/admin/orders" class="text-decoration-none fw-bold small text-success">Manage Orders <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-3 me-3">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Daily Revenue</h6>
                        <h3 class="fw-bold mb-0"><%= stats.dailyRevenue ? stats.dailyRevenue.toLocaleString() : 0 %> VND</h3>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a href="/admin/reports/daily-revenue" class="text-decoration-none fw-bold small text-warning">View Details <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
        <% if (user.roles.name === 'super_admin') { %>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 text-info rounded-circle p-3 me-3">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Total Users</h6>
                        <h3 class="fw-bold mb-0"><%= stats.userCount %></h3>
                    </div>
                </div>
                <div class="card-footer bg-white border-0">
                    <a href="/admin/users" class="text-decoration-none fw-bold small text-info">Manage Users <i class="fas fa-arrow-right ms-1"></i></a>
                    <span class="mx-1">|</span>
                    <a href="/admin/reports/super-admin" class="text-decoration-none fw-bold small text-info">Detailed Report <i class="fas fa-chart-bar ms-1"></i></a>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold">Recent Orders</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Order ID</th>
                            <th>Customer</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (recentOrders && recentOrders.length > 0) { %>
                            <% recentOrders.forEach(order => { %>
                                <tr>
                                    <td class="ps-4 fw-bold">#<%= order.id %></td>
                                    <td><%= order.users ? order.users.name : 'Unknown' %></td>
                                    <td class="fw-bold"><%= order.total_amount.toLocaleString() %> VND</td>
                                    <td>
                                        <% 
                                            let badgeClass = 'bg-secondary';
                                            if (order.status === 'completed') badgeClass = 'bg-success';
                                            if (order.status === 'pending') badgeClass = 'bg-warning text-dark';
                                            if (order.status === 'cancelled') badgeClass = 'bg-danger';
                                        %>
                                        <span class="badge <%= badgeClass %> rounded-pill"><%= order.status.toUpperCase() %></span>
                                    </td>
                                    <td class="text-muted small"><%= new Date(order.created_at).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/orders" class="btn btn-sm btn-outline-primary rounded-pill">View</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">No recent orders found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
